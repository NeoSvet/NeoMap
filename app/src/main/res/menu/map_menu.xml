<?xml version="1.0" encoding="utf-8"?>
<menu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Menu "Map Type" -->
    <item
        android:id="@+id/menu_map_mode"
        android:icon="@drawable/map_mode"
        android:iconTint="?attr/colorAccent"
        android:orderInCategory="1"
        android:showAsAction="always"
        android:title="@string/menu_map_mode"
        tools:ignore="AppCompatResource">
        <menu>

            <item
                android:id="@+id/menu_map_mode_normal"
                android:orderInCategory="1"
                android:showAsAction="never"
                android:title="@string/menu_map_mode_normal"
                tools:ignore="AppCompatResource" />

            <item
                android:id="@+id/menu_map_mode_satellite"
                android:orderInCategory="2"
                android:showAsAction="never"
                android:title="@string/menu_map_mode_satellite"
                tools:ignore="AppCompatResource" />

            <item
                android:id="@+id/menu_map_mode_hybrid"
                android:orderInCategory="2"
                android:showAsAction="never"
                android:title="@string/menu_map_mode_hybrid"
                tools:ignore="AppCompatResource" />

        </menu>
    </item>

    <!-- Menu "Map Traffic" -->
    <item
        android:id="@+id/menu_map_traffic"
        android:icon="@drawable/traffic"
        android:iconTint="?attr/colorAccent"
        android:orderInCategory="2"
        android:showAsAction="always"
        android:title="@string/menu_map_traffic"
        tools:ignore="AppCompatResource" />

    <!-- Menu "Search" -->
    <item
        android:id="@+id/menu_search"
        android:icon="@drawable/search"
        android:title="@string/search"
        app:actionViewClass="androidx.appcompat.widget.SearchView"
        app:showAsAction="always" />
</menu>